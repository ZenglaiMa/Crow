<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/big_old" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提醒类型:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/z_et_alarm_type_parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="请输入贴心提醒的类型"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提醒描述:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/z_et_alarm_description_parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:hint="请输入贴心提醒的描述"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提醒时间:"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/z_spinner_mOra_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/mOra"
            android:theme="@android:style/Theme.Holo.Light" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/z_spinner_hour_parent"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:entries="@array/hour"
            android:theme="@android:style/Theme.Holo.Light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="时"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/z_spinner_minute_parent"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:entries="@array/minute"
            android:theme="@android:style/Theme.Holo.Light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="分"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/z_btn_alarm_submit_parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="30sp" />

</LinearLayout>