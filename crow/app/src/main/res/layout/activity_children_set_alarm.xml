<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/notification" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="设置贴心提醒"
            android:textSize="20dp" />
    </LinearLayout>
    <ImageView
        android:src="@drawable/xin"
        android:layout_width="match_parent"
        android:layout_height="210dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:text="提醒类型:"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/z_et_alarm_type_children"
            android:textSize="20dp"
            android:hint="请输入贴心提醒的类型"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>
    <TextView
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:text="提醒描述:"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/z_et_alarm_description_children"
            android:textSize="20dp"
            android:hint="请输入贴心提醒的描述"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>
    <TextView
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:text="提醒时间:"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <!--两级联动  不好实现-->
    </LinearLayout>
    <TextView
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:text="被提醒人:"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <RadioGroup
            android:id="@+id/z_rg_alarm_person"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/z_rb_alarm_father"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:text="父亲"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"/>
            <RadioButton
                android:id="@+id/z_rb_alarm_mother"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:text="母亲"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RadioGroup>
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:text="确认提醒"
        android:id="@+id/z_btn_alarm_submit_children"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>