<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/z_iv_parent_alert_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/z_tv_parent_alert_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/colorChildren"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill_vertical"
            android:paddingLeft="50dp"
            android:text="贴心提醒"
            android:textColor="@color/colorChildren"
            android:textSize="30dp" />
    </LinearLayout>

    <ImageView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/agg" />

    <ListView
        android:id="@+id/z_lv_parent_show_alarm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></ListView>

    <LinearLayout
        android:id="@+id/z_ll_parent_add_alarm"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/add"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:text="新建"
            android:gravity="center"
            android:layout_width="50dp"
            android:textSize="20dp"
            android:textColor="@color/colorChildren"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>